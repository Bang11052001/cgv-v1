    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Link</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tbody>
     {{#each subCategorys}}
    <tr>
      <td>{{_id}}</td>
      <td>{{name}}</td>
      <td>{{status}}</td>
      <td>{{link}}</td>
      <td><a href="/admin/subcategorys/update?id={{_id}}">Sửa</a>/<a href="/admin/subcategorys/delete?id={{_id}}">Xóa</a></td>
    </tr>
     {{/each}}
  </tbody>
</table>
       


