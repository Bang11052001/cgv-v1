<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb my-0 ms-2">
      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
      <li class="breadcrumb-item"><a href="/admin/cinemas">Quản trị rạp & phòng</a></li>
      <li class="breadcrumb-item active"><span>Danh sách rạp</span></li>
    </ol>
  </nav>
</div>
</header>
<div class="body flex-grow-1 px-3">
  <div class="container-lg">
    <div class="card mb-4">
      <div class="card-body d-flex justify-content-between">
        {{>adminFilter}}
        <div class ="table-filter-right">
          <a href = "/admin/cinemas/create" type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Thêm mới </a>
        </div>
      </div>
      <table class="table mt-2 text-center">
        <thead class="table-dark ">
          <tr>
            <th><input type="checkbox" class = "table-checkbox form-check-input"></th>
            <th scope="col">STT</th>
            <th class ="table-col-left " scope="col">Tên</th>
            <th scope="col">Tổng số phòng</th>
            <th scope="col">Khu vực</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Tùy chọn</th>
          </tr>
        </thead>
        <tbody>
          {{#each cinemas}}
          <tr>
            <td><input type="checkbox" class = "table-checkbox form-check-input"></td>
            <td>{{countIndex @index 1}}</td>
            <td class ="table-col-left text-decoration-none"><a class ="text-decoration-none" href="/admin/rooms?cinema_id={{_id}}">{{name}}</a></td>
            <td>{{roomTotal}}</td>
            <td>{{area.name}}</td>
            <td>{{ status}}</td>
            <td>
              <a href="/admin/cinemas/update?id={{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
              <a href="/admin/cinemas/delete?id={{_id}}"><i class="fa-solid fa-xmark"></i></a>
            </td>
          {{/each}}
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
