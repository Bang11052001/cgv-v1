<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb my-0 ms-2">
      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
      <li class="breadcrumb-item"><a href="/admin/cinemas">Quản lý rạp & phòng</a></li>
      <li class="breadcrumb-item"><a href="/admin/rooms">Danh sách phòng</a></li>
      <li class="breadcrumb-item active"><span>Danh sách lịch chiếu</span></li>
    </ol>
  </nav>
</div>
</header>
<div class="body flex-grow-1 px-3">
  <div class="container-lg">
    <div class="card mb-4">
      <div class="card-body d-flex justify-content-between">
        {{>adminFilter}}
        <div class ="table-filter-right">
          <a href = "/admin/showTimes/create?room_id={{room._id}}&cinema_id={{cinema._id}}" type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Thêm mới </a>
        </div>
      </div>
      <table class="table text-center">
        <thead class ="table-dark">
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Film</th>
            <th scope="col">Quality</th>
            <th scope="col">Time</th>
            <th scope="col">Date</th>
            <th scope="col">Status</th>
            <th scope="col">Option</th>
          </tr>
        </thead>
        <tbody>
          {{#each room.showTimes}}
          <tr>
            <td>{{countIndex @index 1}}</td>
            <td>{{film.name}}</td>
            <td>{{quality.name}}</td>
            <td>{{time}}</td>
            <td>{{date}}</td>
            <td>{{statusHandle status}}</td>
            <td class ="table-option">
              <a href="/admin/showTimes/update?cinema_id={{../cinema._id}}&room_id={{../room._id}}&showTime_id={{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
              <a href="/admin/showTimes/delete?cinema_id={{../cinema._id}}&room_id={{../room._id}}&showTime_id={{_id}}"><i class="fa-solid fa-xmark"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
</div>
</div>
</div>

       
