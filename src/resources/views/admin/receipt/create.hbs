<h1 class="">Add Slide </h1>
<form id ="form-sub-category-create" method="POST" action="/admin/slides" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required name ="name">
  </div>
   <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Image</label>
    <input type="file" class="form-control" id="exampleInputPassword1" name ="file_image">
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Status</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name ="status">
  </div>
 
  <button type="submit" class="btn btn-primary">Submit</button>
</form>