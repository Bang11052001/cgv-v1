<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb my-0 ms-2">
      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
      <li class="breadcrumb-item"><a href="/admin/receipts">Quản lý hóa đơn </a></li>
      <li class="breadcrumb-item active"><span>Danh sách hóa đơn</span></li>
    </ol>
  </nav>
</div>
</header>
<div class="body flex-grow-1 px-3">
  <div class="container-lg">
    <div class="card mb-4">
      <div class="card-body d-flex justify-content-between">
        {{>adminFilter}}
        <div class ="table-filter-right">
          <a href = "/admin/films/create" type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Thêm mới </a>
        </div>
      </div>
      <table class="table  text-center">
        <thead class="table-dark">
          <tr>
            <th><input type="checkbox" class = "table-checkbox form-check-input"></th>
            <th scope="col"><a href="/admin/receipt"></a>Mã HD</th>
            <th scope="col">Phim</th>
            <th scope="col">Người đặt</th>
            <th scope="col">Ngày đặt</th>
            <th scope="col">Giờ đặt</th>
            <th scope="col">Tổng tiền</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Option</th>
          </tr>
        </thead>
        <tbody>
          {{#each receipts}}
          <tr>
            <td><input type="checkbox" class = "table-checkbox form-check-input"></td>
            <td><a href="/admin/receipts/detail?id={{_id}}">{{_id}}</a></td>
            <td>{{cinema.[0].rooms.[0].showTimes.[0].film.name}}</td>
            <td>{{user.name}}</td>
            <td>{{formatDate createdAt}}</td>
            <td>{{formatTime createdAt}}</td>
            <td>{{total}}</td>
            <td>{{status}}</td>
            <td class ="table-option">
              <a href="/admin/receipts/update?id={{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
              <a href="/admin/receipts/delete?id={{_id}}"><i class="fa-solid fa-xmark"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div> 
  </div> 
</div> 

